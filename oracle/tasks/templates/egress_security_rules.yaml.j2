instance_egress_security_rules:
  # Allow TCP
  - source: "{{ quad_zero_route }}"
    protocol: "6" # TCP
    tcp_options:
      destination_port_range:
        min: 1
        max: 65535

  # Allow UDP
  - source: "{{ quad_zero_route }}"
    protocol: "17" # UDP
    udp_options:
      destination_port_range:
        min: 1
        max: 65535

  # ICMP 
  - source: "{{ quad_zero_route }}"
    protocol: "1"
